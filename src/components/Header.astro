<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: rgb(var(--white));
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		font-size: 1em;
	}
	h2 {
		font-size: 1em;
	}
	.site-title{
		display: flex;
		flex-direction: row;
		justify-content: center;
		align-items: center;
		gap: 0.4em;
	}
	.site-title {
		font-size: 1.0em;
		font-weight: bold;
	}
	img.logo-pic {
		width: 30px;
		height: 30px;
		padding: 0;
	}
	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 0.9em 0.5em;
		color: var(--black);
		text-decoration: none;
		/* margin-bottom: -0.06em; */
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--primary);
	}
	.social-links,
	.social-links a {
		display: flex;
		padding: 0 0.4em;
	}
	.social-links svg:hover {
		filter: drop-shadow(2px 2px 2px rgba(var(--black), 20%));
	}
	@media (max-width: 780px) {
		.social-links {
			display: none;
		}
		nav .logo,
		nav a {
			margin-bottom: -2.2px;
		}
		header {
			font-size: 0.9em;
		}
		.logo-pic {
			width: 30px;
			height: 60px;
			padding: 1em 0 1em 0;
		}
	}
	@media (max-width: 400px) {
		nav .logo,
		nav a {
			margin-bottom: -6px;
		}
		img.logo-pic {
			width: 20px;
			height: 20px;
			padding: 0;
		}
	}
</style>
