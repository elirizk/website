---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE } from '../../consts';

const title = "Business Services";
const description = "AI-powered WhatsApp Business Integration Services";
export const prerender = true;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`${title} | ${SITE_TITLE}`} description={description} />
	</head>
	<body>
		<Header />
		<main>
			<article>
				<div class="prose">
					<h1>{title}</h1>
					<hr/>
					
					<section class="business-info">
						<h2>AI-Powered Communication Solutions</h2>
						<p>WhatsApp Business Integration Service in Development - Currently in Testing Phase</p>
						
						<div class="compliance-box">
							<h3>WhatsApp Business Policy Compliance</h3>
							<ul>
								<li>Registered Business Profile with verified contact information</li>
								<li>Strict opt-in/opt-out management system</li>
								<li>24-hour message window compliance</li>
								<li>Message template pre-approval process</li>
								<li>Direct human escalation paths available</li>
							</ul>
						</div>

						<div class="data-protection-box">
							<h3>Data Protection & Privacy</h3>
							<ul>
								<li>Explicit user consent management</li>
								<li>No sharing of sensitive personal information</li>
								<li>No health-related or regulated content</li>
								<li>Clear privacy policy and data handling guidelines</li>
								<li>Secure data storage and transmission</li>
							</ul>
						</div>

						<div class="user-rights-box">
							<h3>User Rights & Controls</h3>
							<ul>
								<li>Opt-in required before any communication</li>
								<li>Clear opt-out instructions provided</li>
								<li>Immediate response to blocking requests</li>
								<li>Transparent data usage policies</li>
								<li>User-controlled communication preferences</li>
							</ul>
						</div>

						<div class="quality-box">
							<h3>Quality Assurance</h3>
							<ul>
								<li>Regular compliance audits</li>
								<li>Monitored message quality metrics</li>
								<li>Approved message templates only</li>
								<li>Human oversight of AI responses</li>
								<li>Clear escalation procedures</li>
							</ul>
						</div>

						<div class="status-box">
							<h3>Current Status</h3>
							<p class="status">üîß In Development - Testing Phase</p>
						</div>

						<div class="features">
							<h3>Planned Features</h3>
							<ul>
								<li>24/7 Automated Response System with Privacy Focus</li>
								<li>Secure Natural Language Processing</li>
								<li>Custom Integration Solutions</li>
								<li>Analytics Dashboard with Privacy Controls</li>
								<li>Compliant Data Storage and Processing</li>
								<li>Regular Security Assessment Reports</li>
							</ul>
						</div>

						<div class="support-channels">
							<h3>Support Channels</h3>
							<ul>
								<li>In-Chat Human Agent Transfer</li>
								<li>Email Support: <a href="mailto:support@elirizk.me">support@elirizk.me</a></li>
								<li>Web Support Portal</li>
								<li>Phone Support (During Business Hours)</li>
							</ul>
						</div>

						<div class="contact">
							<h3>Contact</h3>
							<p>For business inquiries or testing participation:</p>
							<a href="mailto:eli@elirizk.me" class="contact-button">Get in Touch</a>
						</div>
					</section>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>

<style>
	.prose {
		max-width: 800px;
		margin: 0 auto;
		padding: 1em;
	}

	.business-info {
		margin-top: 2em;
	}

	.status-box {
		background-color: #f5f5f5;
		border-radius: 8px;
		padding: 1.5em;
		margin: 2em 0;
	}

	.status {
		color: #666;
		font-weight: 500;
	}

	.features {
		margin: 2em 0;
	}

	.features ul {
		list-style-type: none;
		padding: 0;
	}

	.features li {
		margin: 0.5em 0;
		padding-left: 1.5em;
		position: relative;
	}

