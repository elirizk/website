	.user-rights-box li:before { content: "üë§"; }
	.quality-box li:before { content: "üîç"; }

	.support-channels {
		background-color: #edf2f7;
		padding: 1.5em;
		border-radius: 8px;
		margin: 2em 0;
	}

	.support-channels ul {
		list-style-type: none;
		padding: 0;
	}

	.support-channels li {
		margin: 0.5em 0;
		padding-left: 1.5em;
		position: relative;
	}

	.support-channels li:before {
		content: "üìû";
